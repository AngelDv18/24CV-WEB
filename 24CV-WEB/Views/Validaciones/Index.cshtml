@model _24CV_WEB.Models.Curriculum

<div class="row">

    @if (TempData["msj"] != null)
    {
        <div class="alert alert-success">
            @TempData["msj"]
        </div>
    }

    <div class="col-12">
        <h2 class="text-center"> Ejemplo de envio de información</h2>
        <p class="text-center"> Envio de formulario pasando datos de la vista al controlador.</p>
    </div>
    <div class="col-8">
        <form asp-action="EnviarInformacion" asp-controller="Validaciones" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="col-form-label"> Nombre</label>
                <input type="text" asp-for="Nombre" class="form-control" /> @*name="email"*@
            </div>
            <div class="mb-3">
                <label class="col-form-label"> Apellidos</label>
                <input type="text" asp-for="Apellidos" class="form-control" /> @*name="email"*@
            </div>
            <div class="mb-3">
                <label class="col-form-label"> Email</label>
                <input type="email" asp-for="Email" class="form-control" /> @*name="email"*@
            </div>
            <div class="mb-3">
                <label class="col-form-label"> Fecha de Nacimiento</label>
                <input type="date" asp-for="FechadeNacimiento" class="form-control" /> @*name="email"*@
            </div>
            <div class="mb-3">
                <label class="col-form-label"> CURP</label>
                <input type="text" asp-for="CURP" class="form-control" /> @*name="email"*@
            </div>
            <div class="mb-3">
                <label class="col-form-label"> Ingles</label>
                <input type="number" asp-for="PorcentajeIngles" class="form-control" /> @*name="email"*@
            </div>
            <div class="mb-3">
                <label class="col-form-label"> Foto</label>
                <input type="file" asp-for="Foto" class="form-control" /> @*name="email"*@
            </div>
            <div class="mb-3">
                <label class="col-form-label"> Direccion</label>
                <input type="text" asp-for="Direccion" class="form-control" /> @*name="email"*@
            </div>
            <div class="mb-3">
                <label class="col-form-label"> Comentario</label>
                <textarea class="form-control" asp-for="Email" rows="4"></textarea>  @*name="comentario"*@
            </div>
            <button class="btn-primary" type="submit">Enviar</button>

        </form>
    </div>

    <div class="col-4">
        <h3 class="text-center">Enviar información al correo capturado</h3>
        <p>Se enviara un Correo con la información Capturada.</p>
    </div>
</div>